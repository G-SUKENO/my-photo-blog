});

const { id } = Astro.params;
const post = await client.get({
  endpoint: 'photos',
  contentId: id,
});

const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.getFullYear() + '.' + (date.getMonth() + 1).toString().padStart(2, '0') + '.' + date.getDate().toString().padStart(2, '0');
};

export async function getStaticPaths() {
  const client = createClient({
    serviceDomain: '6t86gj78ob',
    apiKey: 'dCCdFLQew5T6YsttpgtRFfNO2S4A488jecvZ',
  });
  const res = await client.get({ endpoint: 'photos' });
  return res.contents.map((content: any) => ({
    params: { id: content.id },
  }));
}
---

<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.title} | My Photo Blog</title>
    <style is:global>
        @import url('https://fonts.googleapis.com/css2?family=Sawarabi+Mincho&display=swap');
        
        html, body { 
            margin: 0; padding: 0; background-color: #fafafa; color: #333; 
            font-family: "Sawarabi Mincho", serif; overflow: hidden; 
        }

        .stage {
            position: relative;
            width: 100vw;
            height: 100dvh;
        }

        section {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 50px;
            box-sizing: border-box;
            transition: opacity 1.5s ease;
        }

        @media (max-width: 768px) {
            section { padding: 30px 15px; }
        }

        #page-text { z-index: 2; opacity: 1; }
        #page-text.is-hidden { opacity: 0; pointer-events: none; }
        #page-photo { z-index: 1; opacity: 0; background-color: #fafafa; }
        #page-photo.is-visible { opacity: 1; }

        .text-container { 
            max-width: 700px; 
            width: 100%; 
            margin: 0 auto;
            padding-left: 8px;
        }
        
        .text-container p { 
            font-size: 1.25rem; 
            line-height: 2.5; 
            letter-spacing: 0.15em; 
            margin-bottom: 2.5rem; 
            opacity: 0; 
        }
        
        @media (max-width: 768px) {
            .text-container p {
                font-size: 1.05rem; 
                line-height: 2.0; 
                margin-bottom: 1.5rem;
                word-break: break-all;
            }
        }

        .text-container p.is-ready { opacity: 1; }
        .char { display: inline-block; opacity: 0; transition: opacity 1.2s ease-out; }
        .start-anim .char { opacity: 1 !important; }

        @keyframes floating { 0%, 100% { transform: translate(-50%, 0); } 50% { transform: translate(-50%, -10px); } }
        
        /* View Photoボタンの位置を下げました */
        .scroll-hint { 
            position: absolute; bottom: 40px; left: 50%; transform: translateX(-50%); 
            opacity: 0; transition: opacity 1s; background: none; border: none; cursor: pointer; 
            color: #888; font-family: sans-serif; letter-spacing: 0.1em;
        }
        @media (max-width: 768px) {
            .scroll-hint { bottom: 20px; } /* スマホではさらに下に */
        }
        .scroll-hint.visible { opacity: 1; animation: floating 2s ease-in-out infinite; }

        .photo-frame { 
            opacity: 0; 
            transition: opacity 3s ease-out; 
            width: 100%; 
            height: 100%; 
            display: flex; 
            flex-direction: column; 
            justify-content: center; 
            align-items: center; 
        }
        .photo-frame.is-revealed { opacity: 1; }
        .photo-frame img { 
            max-width: 100%; 
            max-height: 75vh; 
            object-fit: contain; 
        }

        /* 写真と情報の距離を近づけました */
        .photo-info { 
            opacity: 0; 
            transition: opacity 2s ease-out; 
            margin-top: 25px; 
            display: flex; 
            flex-direction: row; 
            justify-content: center;
            align-items: center;
            gap: 15px; 
            color: #888; 
            font-size: 0.8rem; 
            letter-spacing: 0.1em; 
            white-space: nowrap;
        }
        @media (max-width: 768px) {
            .photo-info { 
                margin-top: 10px; /* 写真に近づける */
                font-size: 0.65rem; 
                gap: 10px; 
                width: 100%;
            }
        }
        .photo-info.is-visible { opacity: 1; }

        .back-link { position: fixed; top: 30px; left: 30px; z-index: 100; text-decoration: none; color: #aaa; font-size: 0.8rem; letter-spacing: 0.1em; }
        
        @media (max-width: 768px) {
            .back-link { top: 20px; left: 20px; }
        }
    </style>
</head>
<body>
    <a href="/" class="back-link">← Index</a>
    <div class="stage">
        <section id="page-text">
            <div class="text-container js-anim-wrapper">
                <div id="content-source" style="display:none;">{post.content}</div>
            </div>
            <button class="scroll-hint" id="scroll-btn">View Photo</button>
        </section>

        <section id="page-photo">
            <div class="photo-frame" id="photo-target">
                <img src={post.photo.url} alt={post.title} />
                <div class="photo-info" id="info-target">
                    <span>{formatDate(post.date)}</span>
                    <span style="opacity: 0.5;">/</span>
                    <span style="color:#555">{post.title}</span>
                </div>
            </div>
        </section>
    </div>

    <script>
        function init() {
            const source = document.getElementById('content-source');
            const wrapper = document.querySelector('.js-anim-wrapper');
            if (!source || !wrapper) return;

            const rawContent = source.innerHTML.replace(/\n/g, '<br>').replace(/&lt;br\s*\/?&gt;/gi, '\n').replace(/<br\s*\/?>/gi, '\n');
            const lines = rawContent.split('\n').filter(l => l.trim() !== "");
            let globalDelay = 0.8;
            lines.forEach((line) => {
                const p = document.createElement('p');
                wrapper.appendChild(p);
                const temp = document.createElement('div');
                temp.innerHTML = line;
                const plainText = temp.textContent || "";
                [...plainText].forEach(char => {
                    const span = document.createElement('span');
                    span.textContent = char;
                    span.className = 'char';
                    span.style.transitionDelay = `${globalDelay}s`;
                    p.appendChild(span);
                    globalDelay += 0.08;
                    if (char === '、') globalDelay += 0.2;
                    if (char === '。') globalDelay += 0.5;
                });
                p.classList.add('is-ready');
                globalDelay += 0.6;
            });

            setTimeout(() => { document.getElementById('page-text')?.classList.add('start-anim'); }, 100);

            const btn = document.getElementById('scroll-btn');
            if (btn) {
                setTimeout(() => btn.classList.add('visible'), globalDelay * 1000);
                
                btn.onclick = () => {
                    document.getElementById('page-text')?.classList.add('is-hidden');
                    setTimeout(() => {
                        document.getElementById('page-photo')?.classList.add('is-visible');
                        setTimeout(() => {
                            document.getElementById('photo-target')?.classList.add('is-revealed');
                            setTimeout(() => {
                                document.getElementById('info-target')?.classList.add('is-visible');
                            }, 2500);
                        }, 800); 
                    }, 1000); 
                };
            }
        }
        window.onload = init;
    </script>
</body>
</html>